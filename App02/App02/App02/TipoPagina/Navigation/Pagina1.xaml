<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02.TipoPagina.Navigation.Pagina1"
             Title="Titulo da Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" />
        <ToolbarItem Text="Detalhes" />
        <ToolbarItem Text="Orderna" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma content page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Ir para Página 2" Clicked="MudarParaPagina2"/>
            <Button Text="Chamar modal" Clicked="ChamarModal"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 